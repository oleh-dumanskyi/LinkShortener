@model Shortener.Application.Redirections.Queries.GetStatistics.GetStatisticsQuery
@{
    Layout = "/Views/_Layout.cshtml";
}

<h2>Деталі посилання: @ViewBag.UrlDetails.Title</h2>
<p><p></p></p>
<label></label>
<p><label>Заголовок: @ViewBag.UrlDetails.Title</label></p>
@if (ViewBag.UrlDetails.Description != null)
{
    <p><label>Опис: @ViewBag.UrlDetails.Description</label></p>
}
<p><label>Базове посилання: <a href="@ViewBag.UrlDetails.BaseUri">@ViewBag.UrlDetails.BaseUri</a></label></p>
<p><label>Скорочене посилання: <a href="@ViewBag.UrlDetails.ShortenedUri">@ViewBag.UrlDetails.ShortenedUri</a></label></p>
<p><label>Дата створення: @ViewBag.UrlDetails.CreationDate</label></p>
@if (ViewBag.UrlDetails.EditDate != null)
{
    <p><label>Дата редагування: @ViewBag.UrlDetails.EditDate</label></p>
}
<p><p><a asp-controller="Url" asp-action="GetAll" class="link">Назад</a></p></p>

<form asp-controller="Url" asp-action="GetStatistics" method="post">
    <input type="hidden" value="@ViewBag.Id" asp-for="UrlId" />
    <input type="hidden" value="0" asp-for="StatisticType" />
    <button type="submit" class="button">Статистика за датою</button>
    <br/><br/>
</form>
<form asp-controller="Url" asp-action="GetStatistics" method="post">
    <input type="hidden" value="@ViewBag.Id" asp-for="UrlId" />
    <input type="hidden" value="1" asp-for="StatisticType" />
    <button type="submit" class="button">Статистика за країнами</button>
    <br/><br/>
</form>
<form asp-controller="Url" asp-action="GetStatistics" method="post">
    <input type="hidden" value="@ViewBag.Id" asp-for="UrlId" />
    <input type="hidden" value="2" asp-for="StatisticType" />
    <button type="submit" class="button">Статистика за операційними системами</button>
    <br/><br/>
</form>
<form asp-controller="Url" asp-action="GetStatistics" method="post">
    <input type="hidden" value="@ViewBag.Id" asp-for="UrlId" />
    <input type="hidden" value="3" asp-for="StatisticType" />
    <button type="submit" class="button">Статистика за браузерами</button>
    <br/><br/>
</form>